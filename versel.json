{
  "version": 2,
  "builds": [
    { "src": "pages/**/*", "use": "@vercel/static" },
    { "src": "styles/**/*", "use": "@vercel/static" },
    { "src": "scripts/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "^/$", "dest": "/pages/index.html" },
    { "src": "^/about.html$", "dest": "/pages/about.html" },
    { "src": "^/home.html$", "dest": "/pages/home.html" },
    { "src": "^/news.html$", "dest": "/pages/news.html" },
    { "src": "^/teams.html$", "dest": "/pages/teams.html" },
    { "src": "^/Matches/Test Match.html$", "dest": "/pages/Matches/Test Match.html" },
    { "src": "^/Matches/RegisterTestMatch.html$", "dest": "/pages/Matches/RegisterTestMatch.html" },

    { "src": "/styles/(.*)", "dest": "/styles/$1" },
    { "src": "/scripts/(.*)", "dest": "/scripts/$1" },

    { "src": "/(.*)", "dest": "/pages/$1" }
  ]
}

